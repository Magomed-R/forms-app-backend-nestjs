generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int       @id @unique @default(autoincrement())
    username  String
    password  String
    mail      String    @unique
    createdAt DateTime  @default(now())
    forms     Form[]
    history   History[]
    comments  Comment[]
}

model Form {
    id        Int       @id @unique @default(autoincrement())
    title     String
    author    User?     @relation(fields: [authorId], references: [id])
    authorId  Int?
    createdAt DateTime  @default(now())
    tests     Test[]
    history   History[]
    comments  Comment[]
}

model Comment {
    id        Int       @id @unique @default(autoincrement())
    text      String
    createdAt DateTime  @default(now())
    updatedAt DateTime?
    Form      Form?     @relation(fields: [formId], references: [id])
    formId    Int?
    User      User?     @relation(fields: [userId], references: [id])
    userId    Int?
}

model Test {
    id             Int             @id @unique @default(autoincrement())
    question       String
    form           Form            @relation(fields: [formId], references: [id])
    formId         Int
    answers        Answer[]
    historyAnswers HistoryAnswer[]
}

model Answer {
    id       Int     @id @unique @default(autoincrement())
    answer   String
    is_right Boolean
    number   Int
    test     Test    @relation(fields: [testId], references: [id])
    testId   Int
}

model History {
    id      Int             @id @unique @default(autoincrement())
    guest   String?
    user    User?           @relation(fields: [userId], references: [id])
    userId  Int?
    form    Form            @relation(fields: [formId], references: [id])
    formId  Int
    answers HistoryAnswer[]
}

model HistoryAnswer {
    id       Int     @id @unique @default(autoincrement())
    answer   String
    is_right Boolean

    history   History @relation(fields: [historyId], references: [id])
    historyId Int
    test      Test?   @relation(fields: [testId], references: [id])
    testId    Int?
}

model CheckMail {
    id        Int     @id @unique @default(autoincrement())
    mail      String
    code      String
    confirmed Boolean
}
